<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ImageView
        android:id="@+id/joystick_button_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:background="#ee3333"
        android:src="@drawable/joystick_up"
        />
    <ImageView
        android:id="@+id/joystick_button_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/joystick_button_size"
        android:layout_gravity="left|center_vertical"
        android:adjustViewBounds="true"
        android:background="#ee3333"
        android:src="@drawable/joystick_left"
        />
    <ImageView
        android:id="@+id/joystick_button_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/joystick_button_size"
        android:layout_gravity="right|center_vertical"
        android:adjustViewBounds="true"
        android:src="@drawable/joystick_right"
        />
    <ImageView
        android:id="@+id/joystick_button_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/joystick_down"
        />
</merge>
